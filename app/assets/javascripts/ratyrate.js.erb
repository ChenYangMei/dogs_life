$.fn.raty.defaults.half = false;
$.fn.raty.defaults.halfShow = true;
$.fn.raty.defaults.path = "<%= asset_url('big-star.png') %>".replace('big-star.png', '');
$.fn.raty.defaults.cancel = false;

$(function(){
  $(".star").each(function() {
    var $readonly = ($(this).attr('data-readonly') == 'true');
    var $half     = ($(this).attr('data-enable-half') == 'true');
    var $halfShow = ($(this).attr('data-half-show') == 'true');
    var $single   = ($(this).attr('data-single') == 'true');
    $(this).raty({
      score: function() {
        return $(this).attr('data-rating')
      },
      number: function() {
        return $(this).attr('data-star-count')
      },
      half:        $half,
      halfShow:    $halfShow,
      single:      $single,
      path:        '',
      starOn:      '<%= asset_path('star-on.png') %>',
      starOff:     '<%= asset_path('star-off.png') %>',
      starHalf:    '<%= asset_path('star-half.png') %>',
      cancel:      '<%= asset_path('cancel.png') %>',
      cancelPlace: '<%= asset_path('cancel-place.png') %>',
      cancelHint:  '<%= asset_path('cancel-hint.png') %>',
      cancelOn:    '<%= asset_path('cancel-on.png') %>',
      cancelOff:   '<%= asset_path('cancel-off.png') %>',
      noRatedMsg:  '<%= asset_path('no-rated-message.png') %>',
      round:       '<%= asset_path('round.png') %>',
      space:       '<%= asset_path('space.png') %>',
      target:      '<%= asset_path('target.png') %>',
      targetText:  '<%= asset_path('target-text.png') %>',
      targetType:  '<%= asset_path('target-type.png') %>',
      targetFormat: '<%= asset_path('target-format.png') %>',
      targetScoret: '<%= asset_path('target-score.png') %>',
      readOnly: $readonly,
      click: function(score, evt) {
        var _this = this;
        if (score == null) { score = 0; }
        $.post('<%= Rails.application.class.routes.url_helpers.rate_path %>',
        {
          score: score,
          dimension: $(this).attr('data-dimension'),
          id: $(this).attr('data-id'),
          klass: $(this).attr('data-classname')
        },
        function(data) {
          if(data) {
            // success code goes here ...

            if ($(_this).attr('data-disable-after-rate') == 'true') {
              $(_this).raty('set', { readOnly: true, score: score });
            }
          }
        });
      }
    });
  });
  $("div.readonly *").off();
});
