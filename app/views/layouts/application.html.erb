<!DOCTYPE html>
<html>
<head>
  <title>DogsLife</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <%= javascript_include_tag 'application' %>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdTEkrpz-yt6uRQcanLhcxEOmMHLBYf78&callback=initMap&libraries=places" async defer></script>

  <%= csrf_meta_tags %>
  <%= cloudinary_js_config %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-86288820-1', 'auto');
    ga('send', 'pageview');

  </script>

</head>


<body>

  <nav>

    <div class="logo">
      <%= link_to image_tag("logo_two.png"), root_path, class: "logo" %>
    </div>

    <div class="links">
      <ul>
        <li>
          <%= link_to "Add an Area", new_area_path %>
        </li>

        <% if current_user %>
          <li>
            Welcome <strong><%= current_user.name %><%= current_user.user_name %></strong>!
          </li>

          <li>
            <%= link_to "Log out", logout_path, id: "log_out", :method => :delete %>
          </li>

        <% else %>
          <li>
            <%= link_to "Log In", login_path %>
          </li>

          <li>
            <%= link_to "Sign Up", new_user_path %>
          </li>
        <% end %>

      </ul>


    </div>

  </nav>

  <% if flash[:success] %>
    <p class="flash">
      <%= flash[:success] %>
    </p>
  <% end %>

  <% if flash[:error] %>
    <p class="flash">
      <%= flash[:error] %>
    </p>
  <% end %>

  <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

  <div class="">
    <%= yield %>
  </div>


  <footer>
    Copyright &#64 2016 Designed and Created by Yangmei Chen
  </footer>
</body>
</html>
