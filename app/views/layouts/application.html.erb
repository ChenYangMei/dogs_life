<!DOCTYPE html>
<html>
<head>
  <title>DogsLife</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>

  <%= javascript_include_tag 'application' %>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdTEkrpz-yt6uRQcanLhcxEOmMHLBYf78&callback=initMap&libraries=places" async defer></script>

  <%= csrf_meta_tags %>
  <%= cloudinary_js_config %>

</head>


<body>

  <nav>
    <div class="container">
      <div class="row">
        <div class="one column" id="left">
          <%= link_to image_tag("logo.gif"), root_path, class: "logo" %>
        </div>

        <div class="eleven column" id="right">
          <%= link_to "Add an Area", new_area_path %>
          <% if current_user %>
            Welcome <strong><%= current_user.name %><%= current_user.user_name %></strong>!
            <%= link_to "Log out", logout_path, id: "log_out", :method => :delete %>
          <% else %>
            <%= link_to "Log In", login_path %>
            <%= link_to "Sign Up", new_user_path %>
          <% end %>
        </div>
    </div>

    </div>

  </nav>

  <% if flash[:success] %>
    <p class="flash">
      <%= flash[:success] %>
    </p>
  <% end %>

  <% if flash[:error] %>
    <p class="flash">
      <%= flash[:error] %>
    </p>
  <% end %>

  <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
